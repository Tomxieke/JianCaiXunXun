<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/small_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item_background"
    android:clickable="true"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/smallimg"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:background="#eeeeee"/>

            <TextView
                android:id="@+id/smallLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活 动"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right|top"

                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#FFFFFF"
                android:background="#ff0000"/>
        </FrameLayout>



        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/smalltext_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="飞洒发就是打开发就是打开发就是打开发就是打开"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/smalltext_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:text="飞洒发就是打开发就是打开发就是是打开发就是打开发打开发"
                android:textColor="#444444"
                android:textSize="14sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="bottom">

                <!-- 时间 -->
                <TextView
                    android:id="@+id/smalltext_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="03-07"
                    android:textColor="#909090"
                    android:textSize="15sp" />

                <!-- 浏览次数 -->
                <TextView
                    android:id="@+id/smalltext_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@mipmap/ciist_jc_home_icon_heat"
                    android:drawablePadding="6dp"
                    android:text="245"
                    android:textColor="#909090"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_below="@id/one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>-->
</RelativeLayout>