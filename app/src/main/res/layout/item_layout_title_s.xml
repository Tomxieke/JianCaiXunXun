<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:padding="10dp"
    android:background="#FFFFFF"
    android:gravity="center_vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/small_title_left_color"
            android:layout_width="4dp"
            android:layout_height="17dp"
            android:visibility="gone"
            android:background="#ea413c"/>

        <ImageView
            android:id="@+id/small_title_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/big_icon"
            android:layout_marginTop="4dp"
            android:visibility="visible"/>

    </FrameLayout>

    <TextView
        android:id="@+id/small_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="6dp"
        android:textColor="#444444"
        android:text="最新咨询"/>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/small_title_rightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多"
            android:padding="2dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_see_bg"
            android:textSize="14dp"
            android:textColor="#666666"/>
    </RelativeLayout>


</LinearLayout>